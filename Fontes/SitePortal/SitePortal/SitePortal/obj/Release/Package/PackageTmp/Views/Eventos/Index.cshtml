            if (Model.BannerLateral.TargetId == 1) { _target = "_parent"; }
            if (Model.BannerLateral.TargetId == 2) { _target = "_blank"; }
            var _link = String.IsNullOrEmpty(Model.BannerLateral.LinkURL) ? "" : Model.BannerLateral.LinkURL;
                }
