@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript">
        var AppPath = '@Url.Content("~/")';
    </script>

    @Scripts.Render(System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/bundles/Rotativo"))
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>*@
    @Scripts.Render(System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/bundles/Calculadora"))

    <meta name="viewport" content="width=device-width" />
    <title>Calculadora 2017</title>
    <style>
        .centro {
            left: 50%;
            margin-left: -240px; /* A metade de sua largura. */
            position: absolute;
            width: 480px; /* O valor que você desejar. */
            top: 50%;
            transform: translateY(-50%);
        }

        .geral {
            float: left;
            width: 220px;
            border: 1px solid silver;
            border-radius: 6px;
            padding-left: 8px;
            padding-bottom: 11px;
            margin-left: 126px;
        }

        .linha {
            float: left;
            margin-bottom: 8px;
        }

        .ferramenta {
            float: left;
            margin: 2px;
            margin-bottom: 20px;
            font-family: arial;
            font-size: 13px;
            color: #015291;
            font-weight: bold;
        }

            .ferramenta .campo {
                float: left;
                width: 130px;
                text-align: right;
                border: 1px solid gray;
            }

            .ferramenta .botao {
                float: right;
                margin-left: 4px;
            }

        .coluna1 {
            float: left;
            width: 200px;
            background-color: #015291;
            margin: 2px;
            color: white;
            font-family: arial;
            font-size: 13px;
            padding: 2px 2px 2px 6px;
            border-radius: 5px;
        }

        .coluna2 {
            float: left;
            width: 200px;
            margin: 2px;
            border-bottom: 1px dotted #015291;
            border-right: 1px dotted;
            padding-right: 7px;
        }

            .coluna2 span {
                float: left;
                width: 100%;
                text-align: right;
                font-family: arial;
                font-size: 13px;
                min-height: 15px;
            }
    </style>
</head>
<body>
    <div class="centro">

        <div class="geral">
            <div class="linha">
                <div class="ferramenta">
                    Informe Valor da Disputa<br /><br />
                    <input type="text" id="txtValor2017" name="txtValor2017" class="campo" data-thousands="." data-decimal="," data-prefix="R$ " />
                    <input type="button" id="cmdCalcular2017" value="Calcular" class="botao" />
                    <br />
                    <input type="button" id="cmdImprimir2017" value="Imprimir" class="botao" style="display: none; float: right; margin: 5px 0px 0 100px;" />
                    <br /><br />
                </div>
            </div>

            <div class="linha" style="display: none;">
                <div class="coluna1">Árbitro Único</div>
                <div class="coluna2"><input type="text" id="lblArbitroUnico" /></div>
            </div>
            <div class="linha" style="display: none;">
                <div class="coluna1">Presidente</div>
                <div class="coluna2"><input type="text" id="lblPresidente" /></div>
            </div>
            <div class="linha" style="display: none;">
                <div class="coluna1">Co-Árbitros</div>
                <div class="coluna2"><input type="text" id="lblCoArbitros" /></div>
            </div>
            <div class="linha" style="display: none;">
                <div class="coluna1">Total</div>
                <div class="coluna2"><input type="text" id="lblTotal" /></div>
            </div>
            <div class="linha" style="display: none;">
                <div class="coluna1">Despesas Administrativas</div>
                <div class="coluna2"><span id="lblDespesasAdministrativas"></span></div>
            </div>
            <div style="display: none">
                <input type="text" id="lblRequerenteTaxaRegistroX" />
                <input type="text" id="lblRequerenteTaxaAdministracaoX" />
                <input type="text" id="lblRequeridoTaxaAdministracaoX" />
                <input type="text" id="lblRequerenteHonorarioArbitrosX" />
                <input type="text" id="lblRequeridoHonorarioArbitrosX" />
                <input type="text" id="lblRequerenteTotalX" />
                <input type="text" id="lblRequeridoTotalX" />

                <input type="text" id="lblRequerenteTaxaRegistro2X" />
                <input type="text" id="lblRequerenteTaxaAdministracao2X" />
                <input type="text" id="lblRequeridoTaxaAdministracao2X" />
                <input type="text" id="lblRequerenteHonorarioArbitros2X" />
                <input type="text" id="lblRequeridoHonorarioArbitros2X" />
                <input type="text" id="lblRequerenteTotal2X" />
                <input type="text" id="lblRequeridoTotal2X" />

                <input type="text" id="lblCoArbitrosX" />
                <input type="text" id="lblRequerenteX" />
                <input type="text" id="lblRequeridoX" />

            </div>
        </div>

        <div style="float: left; width: 560px; font-family: arial; font-size: 12px;">
            
            <div style="float: left; width: 480px; border: 1px solid gray; border-radius: 6px; margin-top: 10px;">
                <div style="width: 474px; text-align: left; float: left; border-bottom: 1px solid gray; padding: 4px 0 4px 6px; background-color: #015291; color: white; border-top-left-radius: 6px; border-top-right-radius:6px;">Tribunal Arbitral (3 Árbitros)</div>
                <div style="float: left; width: 479px;">
                    <div style="text-align: center; float: left;"><div style="width: 253px; text-align: left; float: left; background-color: #d0e4ea; border-bottom: 1px dotted gray; padding: 2px 0; height: 16px; ">&nbsp;</div><div style="width: 113px; text-align: left; float: left; background-color: #d0e4ea; border-bottom: 1px dotted gray; padding: 2px 0; height: 16px; color:#015291; "><span>Requerente(s)</span></div><div style="width: 113px; text-align: left; float: left; background-color: #d0e4ea; border-bottom: 1px dotted gray; padding: 2px 0; height: 16px; color: #015291;"><span>Requerido(s)</span></div></div>
                    <div style="text-align: center; float: left; padding: 2px 0; border-bottom: 1px dotted gray; "><div style="width: 247px; text-align: left; float: left; padding-left: 6px;">Taxa de Registro</div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequerenteTaxaRegistro"></span></div><div style="width: 113px; text-align: left; float: left;"><span>-</span></div></div>
                    <div style="text-align: center; float: left; padding: 2px 0; border-bottom: 1px dotted gray; "><div style="width: 247px; text-align: left; float: left; padding-left: 6px;">Taxa de Administração</div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequerenteTaxaAdministracao"></span></div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequeridoTaxaAdministracao"></span></div></div>
                    <div style="text-align: center; float: left; padding: 2px 0; border-bottom: 1px dotted gray; "><div style="width: 247px; text-align: left; float: left; padding-left: 6px;">Honorários do Tribunal Arbitral (<a href="#" onclick="window.open('http://ccbc.org.br/Conteudo/Composicao', 'Calculadora 2017', 'STATUS=NO, TOOLBAR=NO, LOCATION=NO, DIRECTORIES=NO, RESISABLE=NO, SCROLLBARS=YES, TOP=10, LEFT=10, WIDTH=365, HEIGHT=242'); return false;" style="font-size: 9px;">Composição</a>)</div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequerenteHonorarioArbitros"></span></div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequeridoHonorarioArbitros"></span></div></div>
                    <div style="text-align: center; float: left; padding: 2px 0; border-bottom: 1px dotted gray; font-weight: bold;"><div style="width: 247px; text-align: left; float: left; padding-left: 6px;">Total</div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequerenteTotal"></span></div><div style="width: 113px; text-align: left; float: left; "><span id="lblRequeridoTotal"></span></div></div>
                </div>
            </div>
            <div style="float: left; width: 480px; border: 1px solid gray; border-radius: 6px; margin-top: 10px;">
                <div style="width: 474px; text-align: left; float: left; border-bottom: 1px solid gray; padding: 4px 0 4px 6px; background-color: #015291; color: white; border-top-left-radius: 6px; border-top-right-radius:6px;">Árbitro Único</div>
                <div style="float: left; width: 479px;">
                    <div style="text-align: center; float: left;"><div style="width: 253px; text-align: left; float: left; background-color: #d0e4ea; border-bottom: 1px dotted gray; padding: 2px 0; height: 16px; ">&nbsp;</div><div style="width: 113px; text-align: left; float: left; background-color: #d0e4ea; border-bottom: 1px dotted gray; padding: 2px 0; height: 16px; color:#015291; "><span>Requerente(s)</span></div><div style="width: 113px; text-align: left; float: left; background-color: #d0e4ea; border-bottom: 1px dotted gray; padding: 2px 0; height: 16px; color: #015291;"><span>Requerido(s)</span></div></div>
                    <div style="text-align: center; float: left; padding: 2px 0; border-bottom: 1px dotted gray;"><div style="width: 247px; text-align: left; float: left; padding-left: 6px;">Taxa de Registro</div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequerenteTaxaRegistro2"></span></div><div style="width: 113px; text-align: left; float: left;"><span>-</span></div></div>
                    <div style="text-align: center; float: left; padding: 2px 0; border-bottom: 1px dotted gray;"><div style="width: 247px; text-align: left; float: left; padding-left: 6px;">Taxa de Administração</div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequerenteTaxaAdministracao2"></span></div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequeridoTaxaAdministracao2"></span></div></div>
                    <div style="text-align: center; float: left; padding: 2px 0; border-bottom: 1px dotted gray;"><div style="width: 247px; text-align: left; float: left; padding-left: 6px;">Honorários do Árbitro Único</div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequerenteHonorarioArbitros2"></span></div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequeridoHonorarioArbitros2"></span></div></div>
                    <div style="text-align: center; float: left; padding: 2px 0; border-bottom: 1px dotted gray; font-weight: bold; "><div style="width: 247px; text-align: left; float: left; padding-left: 6px;">Total</div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequerenteTotal2"></span></div><div style="width: 113px; text-align: left; float: left;"><span id="lblRequeridoTotal2"></span></div></div>
                </div>
            </div>
        </div>


    </div>
</body>
</html>
