@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model SitePortal.Models.Portal

<div class="geral-1050">
    <div class="conteudo">

        <!-- nav internas -->
        <div class="internas-navegacao">
            <a href="/">Home</a>
            <a href="#">-</a>
            <a href="Contato">Minha Conta</a>
        </div>
        <!-- nav internas -->
        <!-- contato -->
        <div class="contato-titulo">
            <h1>@Resources.Portal.MinhaConta_Cadastro<span class="cor-padrao-texto"></span></h1>
        </div>
        <div class="contato-form">
            @if (String.IsNullOrEmpty(Model.NrProtocoloContato))
            {
                using (Html.BeginForm("Atualizar", "MinhaConta", new { }, FormMethod.Post))
                {
                    <input type="text" name="ID" value="@ViewBag.ID" />
                    <input type="text" name="Fluxo"  value="@ViewBag.Fluxo" />
                    <input type="text" name="nome" placeholder="@Resources.Portal.Contato_Nome" value="@Model.Usuario.Nome" />
                    <input type="text" name="login" placeholder="Login" value="@Model.Usuario.Login" />
                    <input type="text" name="email" placeholder="@Resources.Portal.Contato_Email" value="@Model.Usuario.Email" />
                    <input type="password" name="senha" placeholder="senha" />
                    <input class="cor-padrao opacidade" type="submit" value="@Resources.Portal.Contato_Enviar" style="cursor: pointer;" />
                }
            }
            else
            {
                using (Html.BeginForm("Index", "Contato", new { }, FormMethod.Post))
                {
                    <span class="mensagem-enviada-sucesso">@Resources.Portal.Contato_MensagemAgradecimento<b>@Model.NrProtocoloContato</b></span>
                }
            }
        </div>
        

    </div>
</div>

