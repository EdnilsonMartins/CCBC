@{
    ViewBag.Title = "ListaMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jMenu.js" type="text/javascript"></script>
}

@model BackofficeCMS.Models.CMS

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.MENU_LISTAR)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="portlet box blue-hoki">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-edit"></i>Menu Superior
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>
                        <a id="btnAtualizarMenuSuperior" href="#" class="reload">
                        </a>
                        <a href="javascript:;" class="remove">
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="btn-group">
                                    @if (Model.ListaFuncionalidades.Any(x => x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.MENU_ADICIONAR))
                                    {
                                        <button id="btnNovoMenuSuperior" class="btn green-sharp" data-toggle="modal">Adicionar <i class="fa fa-plus"></i></button>
                                    }

                                    @if (Model.ListaFuncionalidades.Any(x => x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.MENU_EDITAR))
                                    {
                                        <button id="btnEditarMenuSuperior" class="btn green-sharp" data-toggle="modal" style="margin-left: 1px;">Editar <i class="fa fa-edit"></i></button>
                                    }

                                    @if (Model.ListaFuncionalidades.Any(x => x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.MENU_EXCLUIR))
                                    {
                                        <button id="btnExcluirMenuSuperior" class="btn green-sharp" data-toggle="modal" style="margin-left: 1px;">Remover <i class="fa fa-trash-o"></i></button>
                                    }
                                </div>
                            </div>

                        </div>

                    </div>

                    @if (Model.ListaFuncionalidades.Any(x => x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.MENU_LISTAR))
                    {
                        <div id="tvMenuSuperior">
                        </div>
                    }

                </div>
            </div>
        </div>
        @*</div>

