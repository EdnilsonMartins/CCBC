<div class="modal fade" id="CadRegraPassoCondicao" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Condição</h4>
            </div>
            <div class="modal-body">

                <form id="frmRegraPassoCondicao">

                    <div class="row" style="margin-bottom: 10px !important;">
                        <div class="form-group">
                            <label class="control-label col-md-3">Grupo de Usuário</label>
                            <div class="col-md-9">
                                <select id="UsuarioGrupo" name="UsuarioGrupo" class="bs-select form-control col-md-6"></select>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 10px !important;">
                        <div class="form-group">
                            <label class="control-label col-md-3">Usuário</label>
                            <div class="col-md-9">
                                <select id="Usuario" name="Usuario" class="bs-select form-control col-md-6" data-live-search="true" data-size="10"></select>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom: 10px !important;">
                        <div class="form-group">
                            <label class="control-label col-md-3">Qtd Mín. de Aprovações</label>
                            <div class="col-md-9">
                                <input id="QtdAprovacao" name="QtdAprovacao" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">

                <button type="button" id="btnSalvarRegraPassoCondicao" class="btn green"><i class="fa fa-check"></i> Salvar</button>
                <button type="button" id="btnFecharRegraPassoCondicao" class="btn btn-default " data-dismiss="modal">Fechar</button>

            </div>
        </div>
    </div>
</div>