@{
    ViewBag.Title = "CadRegra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jRegra.js" type="text/javascript"></script>
}

<div class="row">

    <div class="modalInterna" style="display: none;">
        <img src="@Url.Content("~/Content/Images/loader.gif")" alt="Aguarde..." style="border: 1px solid gray; border-radius: 4px !important; left: 50%; margin-left: -16px; position: absolute; width: 32px; top: 50%; transform: translateY(-50%); " />
    </div>

    <div class="col-md-12">
        <div class="">
            @*portlet-body form*@
            <!-- BEGIN FORM-->
            <form id="frmCadRegra" action="#" class="horizontal-form">

                <input type="hidden" id="RegraId" name="RegraId" value="@ViewBag.RegraId" />
                <input type="hidden" id="RegraPassoId" name="RegraPassoId" value="0" />
                <input type="hidden" id="RegraPassoCondicaoId" name="RegraPassoCondicaoId" value="0" />

                <div class="form-body tabbable tabbable-custom tabbable-noborder">

                    <!-- Abas -->
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tabGeral" data-toggle="tab">
                                Geral
                            </a>
                        </li>
                    </ul>
                    <!--/Abas -->
                    <!-- Conteúdo -->
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="tabGeral" style="min-height: 500px;">

                            @*<h3 class="form-section">Geral</h3>*@

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Descrição</label>
                                        <input type="text" id="Descricao" name="Descricao" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Tipo</label>
                                        <select id="RegraTipo" name="RegraTipo" class="bs-select form-control">
                                            <option value="1">Banner</option>
                                            <option value="2">Evento</option>
                                            <option value="3">Matéria</option>
                                            <option value="4">Notícias</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <!-- Passos da Regra -->
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="form-section">Passos</h3>
                                </div>
                                <div class="col-md-6" style="text-align: right; margin-top: 13px;">
                                    <button type="button" id="btnNovoRegraPasso" class="btn blue-soft" title="Adicionar Passo"><i class="fa fa-plus-circle"></i> Adicionar Passo</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <table id="tblRegraPasso" class="table table-striped table-hover table-bordered">
                                            <thead>
                                                <tr>
                                                    <th style="width: 50px;">
                                                        ID
                                                    </th>
                                                    <th style="width: 50px; text-align: center;">
                                                        Sequência
                                                    </th>
                                                    <th>
                                                        Descrição
                                                    </th>
                                                    <th style="width: 80px;">
                                                        Qtd Mínima de Aprovações
                                                    </th>
                                                    <th style="width: 80px;">
                                                        Actions
                                                    </th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!--/Passos da Regra -->
                            <!-- Condições do Passo-->
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="form-section">Condições</h3>
                                </div>
                                <div class="col-md-6" style="text-align: right; margin-top: 13px;">
                                    <button type="button" id="btnNovoRegraPassoCondicao" class="btn blue-soft" title="Adicionar Condição"><i class="fa fa-plus-circle"></i> Adicionar Condição</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <table id="tblRegraPassoCondicao" class="table table-striped table-hover table-bordered">
                                            <thead>
                                                <tr>
                                                    <th style="width: 50px;">
                                                        ID
                                                    </th>
                                                    <th>
                                                        Grupo
                                                    </th>
                                                    <th>
                                                        Usuário
                                                    </th>
                                                    <th style="width: 80px;">
                                                        Qtd Mínima de Aprovações
                                                    </th>
                                                    <th style="width: 80px;">
                                                        Actions
                                                    </th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!--/Condições do Passo-->

                        </div>

                    </div>
                    <!--/Conteúdo -->

                </div>

                <div style="width: 100%; text-align: right; margin-top: 0px; border-top: 1px solid lightgray; padding-top: 5px; ">
                    <button type="button" id="btnSalvarRegra" class="btn green" title="Salvar dados da regra"><i class="fa fa-check"></i> Salvar</button>
                    <button type="button" id="btnFecharRegra" onclick="javascript: history.go(-1);" class="btn default">Voltar</button>
                </div>

            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>

@{Html.RenderPartial("CadRegraPasso", null);}
@{Html.RenderPartial("CadRegraPassoCondicao", null);}