@{
    ViewBag.Title = "ListaPublicacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jPublicacao.js" type="text/javascript"></script>
}


@model BackofficeCMS.Models.CMS

@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.PUBLICACAO_EDITAR)))
{
    <input id="optFunc_160" type="hidden" />
}
@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.PUBLICACAO_EXCLUIR)))
{
    <input id="optFunc_170" type="hidden" />
}

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.PUBLICACAO_LISTAR)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
<table id="tblPublicacao" class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="width: 80px;">
                ID
            </th>
            <th>
                Tipo
            </th>
            <th>
                Título
            </th>
            <th>
                Destaque
            </th>
            <th>
                Posição
            </th>
            <th style="width: 80px;">
                Data
            </th>
            <th>
                Status
            </th>
            <th>
                Situação
            </th>
            <th style="width: 50px; text-align: center;">
                Actions
            </th>
        </tr>
    </thead>
</table>
}        
