@{
    ViewBag.Title = "CadAssociado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{

    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jAssociado.js" type="text/javascript"></script>

}

@model BackofficeCMS.Models.CMS


<div class="row">

    <div class="modalInterna" style="display: none;">
        <img src="@Url.Content("~/Content/Images/loader.gif")" alt="Aguarde..." style="border: 1px solid gray; border-radius: 4px !important; left: 50%; margin-left: -16px; position: absolute; width: 32px; top: 50%; transform: translateY(-50%); " />
    </div>

    <div class="col-md-12">
        @*<div class="portlet box blue-hoki">*@
        @*<div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Publicação
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>*@

        <div class="">
            @*portlet-body form*@
            <!-- BEGIN FORM-->
            <form id="frmCadAssociado" action="#" class="horizontal-form">


                <input type="hidden" id="AssociadoId" name="AssociadoId" value="@ViewBag.AssociadoId" />
                <div class="form-body tabbable tabbable-custom tabbable-noborder">

                    <!-- Abas -->
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tabGeral" data-toggle="tab">
                                Geral
                            </a>
                        </li>
                    </ul>
                    <!--/Abas -->
                    <!-- Conteúdo -->
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="tabGeral">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Nome</label>
                                        <input type="text" id="Nome" name="Nome" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Tipo</label>
                                        <select name="TipoPessoa" class="bs-select form-control">
                                            <option value="1">Física</option>
                                            <option value="2">Jurídica</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Categoria</label>
                                        <select name="AssociadoCategoria" class="bs-select form-control">
                                            <option value="1">Associado</option>
                                            <option value="2">Árbitro</option>
                                            <option value="3">Mediador</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">País</label>
                                        <select name="Pais" class="bs-select form-control">
                                            <option value="1">Brasil</option>
                                            <option value="2">Canadá</option>
                                            <option value="3">Estados Unidos</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Resumo</label>
                                        <textarea id="Resumo" name="Resumo" rows="5" class="form-control" style="resize: none;"></textarea>
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                        </div>

                    </div>
                    <!--/Conteúdo -->

                    <div style="width: 100%; text-align: right; margin-top: 0px; border-top: 1px solid lightgray; padding-top: 5px; ">
                        <button type="button" id="btnSalvarAssociado" class="btn green" title="Salvar dados da Pessoa"><i class="fa fa-check"></i> Salvar</button>
                        <button type="button" id="btnFecharAssociado" onclick="javascript: history.go(-1);" class="btn default">Voltar</button>
                    </div>

                </div>

            </form>
            <!-- END FORM-->
        </div>
        @*</div>*@
    </div>
</div>