                    <i class="fa fa-shopping-cart"></i>
                </div>
                <div class="details">
                    <div class="number">
                        @Model.Resumo.TotalNoticias
                    </div>
                    <div class="desc">
                        Notícias
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <a class="dashboard-stat dashboard-stat-light purple-soft" href="@Url.Content("~/Mailing/ListaMailing")">
                <div class="visual">
                    <i class="fa fa-globe"></i>
                </div>
                <div class="details">
                    <div class="number">
                        @Model.Resumo.TotalAssinantes
                    </div>
                    <div class="desc">
                        Assinantes
                    </div>
                </div>
            </a>
        </div>
    </div>
