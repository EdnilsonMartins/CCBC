    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <a class="dashboard-stat dashboard-stat-light blue-soft" href="@Url.Content("~/Publicacao/ListaPublicacao")">
                <div class="visual">
                    <i class="fa fa-comments"></i>
                </div>
                <div class="details">
                    <div class="number">
                        @Model.Resumo.TotalMateria
                    </div>
                    <div class="desc">
