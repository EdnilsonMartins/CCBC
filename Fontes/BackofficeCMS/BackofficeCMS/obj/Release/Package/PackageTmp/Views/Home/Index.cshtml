@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.DASH_GERAL_PERMITIRAPROVACAO))) {
        <div class="row">
            <div class="col-md-9 col-sm-9">
                <!-- BEGIN PORTLET-->
                <div class="portlet light">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-globe font-green-sharp"></i>
                            <span class="caption-subject font-green-sharp bold uppercase">Aprovações Pendentes</span>
                        </div>
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tab_1_1" data-toggle="tab">
                                    Publicações
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="portlet-body">
                        <!--BEGIN TABS-->
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1_1">
                                <div class="scroller" style="height: 339px;" data-always-visible="1" data-rail-visible="0">
                                    <ul class="feeds">
                                        @if (Model.ListaPublicacao.Count == 0)
                                {
                                <li>
                                    <div class="col1" style="width: auto !important;">
                                        <div class="date">
                                            <i>Nenhuma liberação aguardando sua aprovação.</i>
                                        </div>
                                    </div>
                                </li>
                                }
                                        @foreach (var pub in Model.ListaPublicacao) {
                                <li>
                                    <div class="col1" style="width: auto !important;">
                                        <div class="cont">
                                            <div class="cont-col1">
                                                <div class="label label-sm label-success">
                                                    <i class="fa fa-bell-o"></i>
                                                </div>
                                            </div>
                                            <div class="cont-col2">
                                                <div class="desc">
                                                    <a href="@Url.Content("~/")publicacao/CadPublicacao?PublicacaoId=@pub.PublicacaoId">
                                                        @pub.Complemento.PublicacaoTipo: @pub.Detalhe.Titulo
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col2" style="float: right; width: auto !important;">
                                        @*<div class="date">
                                                Just now
                                            </div>*@
                                        <span class="label label-sm label-success btnHomeAprovar" id="@pub.PublicacaoId" style="float: left; padding: 3px 3px 4px 3px; margin: 3px 0 1px 0px; display: inline; width: 80px; cursor: pointer;">Aprovar <i class="fa fa-share"></i></span>
                                        <span class="label label-sm label-danger btnHomeReprovar" id="@pub.PublicacaoId" style="float: left; padding: 3px 3px 4px 3px; margin: 3px 0 1px 2px; display: inline; width: 80px;">Reprovar <i class="fa fa-trash-o"></i></span>
                                    </div>
                                </li>
                                }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!--END TABS-->
                    </div>
                </div>
                <!-- END PORTLET-->
            </div>
        </div>
}
