@{
    ViewBag.Title = "MinhaConta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{

    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jUsuarioGrupo.js" type="text/javascript"></script>

}

<div class="row">

    <div class="modalInterna" style="display: none;">
        <img src="@Url.Content("~/Content/Images/loader.gif")" alt="Aguarde..." style="border: 1px solid gray; border-radius: 4px !important; left: 50%; margin-left: -16px; position: absolute; width: 32px; top: 50%; transform: translateY(-50%); " />
    </div>

    <div class="col-md-12">
        <div class="">
            <!-- BEGIN FORM-->
            <form id="frmCadUsuarioGrupo" action="#" class="horizontal-form">

                <input type="hidden" id="UsuarioGrupoId" name="UsuarioGrupoId" value="@ViewBag.UsuarioGrupoId" />
                <input type="hidden" id="UsuarioGrupoPaiId" name="UsuarioGrupoPaiId" value="@ViewBag.UsuarioGrupoPaiId" />

                <div class="form-body tabbable tabbable-custom tabbable-noborder">

                    <!-- Abas -->
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tabGeral" data-toggle="tab">
                                Geral
                            </a>
                        </li>
                    </ul>
                    <!--/Abas -->
                    <!-- Conteúdo -->
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="tabGeral" style="min-height: 200px;">
                            
                            @*<h3 class="form-section">Nome</h3>*@

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Nome</label>
                                        <input type="text" id="Nome" name="Nome" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                
                            </div>
                            
                        </div>
                    </div>
                    <!--/Conteúdo -->

                </div>

                <div style="width: 100%; text-align: right; margin-top: 0px; border-top: 1px solid lightgray; padding-top: 5px; ">
                    <button type="button" id="btnSalvarUsuarioGrupo" class="btn green" title="Salvar dados do grupo de usuários"><i class="fa fa-check"></i> Salvar</button>
                    <button type="button" id="btnFecharUsuarioGrupo" onclick="javascript: history.go(-1);" class="btn default">Voltar</button>
                </div>

            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>
