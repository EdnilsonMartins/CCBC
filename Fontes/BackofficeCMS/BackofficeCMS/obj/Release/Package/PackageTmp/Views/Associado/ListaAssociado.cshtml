@{
    ViewBag.Title = "ListaBanner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jAssociado.js" type="text/javascript"></script>
}
@model BackofficeCMS.Models.CMS

@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.PESSOA_EDITAR)))
{
    <input id="optFunc_400" type="hidden" />
}
@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.PESSOA_EXCLUIR)))
{
    <input id="optFunc_410" type="hidden" />
}

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.PESSOA_LISTAR)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
    <table id="tblAssociado" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th style="width: 100px;">
                    ID
                </th>
                <th>
                    Nome
                </th>
                @*<th>
                    Resumo
                </th>*@
                <th style="width: 80px;">
                    Tipo
                </th>
                <th style="width: 80px;">
                    Categoria
                </th>
                <th style="width: 80px;">
                    País
                </th>
                <th style="width: 80px;">
                    Actions
                </th>
            </tr>
        </thead>
    </table>
}
