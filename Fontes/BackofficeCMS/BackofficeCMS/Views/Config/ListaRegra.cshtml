@{
    ViewBag.Title = "ListaRegra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jRegra.js" type="text/javascript"></script>
}

@model BackofficeCMS.Models.CMS

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.CONFIGURACAO_WORKFLOW)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{

<table id="tblRegra" class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="width: 100px;">
                ID
            </th>
            <th>
                Descrição
            </th>
            <th>
                Tipo
            </th>
            <th style="width: 80px;">
                Data
            </th>
            <th style="width: 80px;">
                Actions
            </th>
        </tr>
    </thead>
</table>

}