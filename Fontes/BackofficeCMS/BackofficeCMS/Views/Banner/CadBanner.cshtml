@{
    ViewBag.Title = "CadBanner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{

    <script type="text/javascript" src="@Url.Content("~/")Scripts/Libs/jquery.ui.widget.js"></script>
    <script type="text/javascript" src="@Url.Content("~/")Scripts/Libs/jquery.fileupload.js"></script>

    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jArquivo.js" type="text/javascript"></script>
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jBanner.js" type="text/javascript"></script>
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jMediaCenter.js" type="text/javascript"></script>

}

@model BackofficeCMS.Models.CMS


<div class="row">

    <div class="modalInterna" style="display: none;">
        <img src="@Url.Content("~/Content/Images/loader.gif")" alt="Aguarde..." style="border: 1px solid gray; border-radius: 4px !important; left: 50%; margin-left: -16px; position: absolute; width: 32px; top: 50%; transform: translateY(-50%); " />
    </div>

    <div class="col-md-12">
        @*<div class="portlet box blue-hoki">*@
        @*<div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Publicação
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>*@

        <div class="">
            @*portlet-body form*@
            <!-- BEGIN FORM-->
            <form id="frmCadBanner" action="#" class="horizontal-form">


                <input type="hidden" id="BannerId" name="BannerId" value="@ViewBag.BannerId" />
                <div class="form-body tabbable tabbable-custom tabbable-noborder">

                    <!-- Abas -->
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tabGeral" data-toggle="tab">
                                Geral
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Extra <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#tabEN" tabindex="-1" data-toggle="tab">
                                        Inglês
                                    </a>
                                </li>
                                <li>
                                    <a href="#tabES" tabindex="-1" data-toggle="tab">
                                        Espanhol
                                    </a>
                                </li>
                                <li>
                                    <a href="#tabFR" tabindex="-1" data-toggle="tab">
                                        Francês
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#tabGaleria" data-toggle="tab">
                                Media
                            </a>
                        </li>
                        <li>
                            <a href="#tabDivulgacao" data-toggle="tab">
                                Divulgação
                            </a>
                        </li>
                    </ul>
                    <!--/Abas -->
                    <!-- Conteúdo -->
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="tabGeral">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Título</label>
                                        <input type="text" id="Titulo" name="Titulo" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Tipo</label>
                                        <select name="BannerTipo" class="bs-select form-control">
                                            <option value="1">Home</option>
                                            <option value="2">Home Lateral</option>
                                            <option value="3">Home Mantenedores</option>
                                            <option value="4">Home Parceiros</option>
                                            <option value="5">Home Inferior</option>
                                            <option value="10">Home Inferior Rotativo</option>
                                            <option value="6">Home Inferior Lateral</option>
                                            <option value="9">Home Inferior Lateral Rotativo</option>
                                            <option value="7">Interna Superior</option>
                                            <option value="8">Redes Sociais</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label">Data</label>
                                        <div class="input-group date date-picker" id="dtData" data-date-format="dd/mm/yyyy" style="width: 140px;">
                                            <input type="text" class="form-control" readonly id="Data" name="Data">
                                            <span class="input-group-btn">
                                                <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label">Validade</label>
                                        <div class="input-group date date-picker" id="dtDataValidade" data-date-format="dd/mm/yyyy" style="width: 140px;">
                                            <input type="text" class="form-control" readonly id="DataValidade" name="DataValidade">
                                            <span class="input-group-btn">
                                                <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->

                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label"></label>

                                    </div>
                                </div>
                                <!--/span-->

                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label">Status</label>
                                        <select id="Status" name="Status" class="bs-select form-control">
                                            <option value=""></option>
                                            <option value="1">Ativo</option>
                                            <option value="0">Inativo</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <!-- span -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Link</label>
                                        <input type="text" id="LinkURL" name="LinkURL" class="form-control">
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>
                                <!--/span -->
                                <!-- span -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Target</label>
                                        <select id="Target" name="Target" class="bs-select form-control">
                                            <option value="1">Mesma Aba</option>
                                            <option value="2">Nova Aba</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span -->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label class="control-label">Posição</label>
                                        <input type="text" id="Posicao" name="Posicao" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Referência <span class="help-inline font-blue-soft">(Informe o ID da publicação que exclusivamente exibirá este banner)</span></label>
                                        <input type="text" id="Referencia" name="Referencia" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                            </div>



                            <h3 class="form-section">Conteúdo</h3>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Resumo</label>
                                        <input type="text" id="Resumo" name="Resumo" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Descrição</label>
                                        <input type="text" id="Descricao" name="Descricao" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                        </div>

                        <div class="tab-pane fade " id="tabEN">
                            <div class="alert alert-info">
                                O conteúdo registrado nesta área será exibido apenas quando o site estiver com o idioma <b>Inglês</b> selecionado.
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Título</label>
                                        <input type="text" id="TituloEN" name="TituloEN" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Resumo</label>
                                        <input type="text" id="ResumoEN" name="ResumoEN" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Descrição</label>
                                        <input type="text" id="DescricaoEN" name="DescricaoEN" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                        </div>

                        <div class="tab-pane fade " id="tabES">
                            <div class="alert alert-info">
                                O conteúdo registrado nesta área será exibido apenas quando o site estiver com o idioma <b>Espanhol</b> selecionado.
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Título</label>
                                        <input type="text" id="TituloES" name="TituloES" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Resumo</label>
                                        <input type="text" id="ResumoES" name="ResumoES" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Descrição</label>
                                        <input type="text" id="DescricaoES" name="DescricaoES" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                        </div>

                        <div class="tab-pane fade " id="tabFR">
                            <div class="alert alert-info">
                                O conteúdo registrado nesta área será exibido apenas quando o site estiver com o idioma <b>Francês</b> selecionado.
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Título</label>
                                        <input type="text" id="TituloFR" name="TituloFR" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Resumo</label>
                                        <input type="text" id="ResumoFR" name="ResumoFR" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Descrição</label>
                                        <input type="text" id="DescricaoFR" name="DescricaoFR" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                        </div>


                        <div class="tab-pane fade " id="tabGaleria">

                            <div class="table-toolbar">

                                <div class="row">

                                    <!-- Filtro de Arquivos-->
                                    <div class="col-md-6">
                                        <ul class="mix-filter">
                                            <li class="filter" data-filter="mix_all">
                                                Todas
                                            </li>
                                            <li class="filter" data-filter="category_5">
                                                Imagem Primária
                                            </li>
                                            <li class="filter" data-filter="category_6">
                                                Imagem Secundária
                                            </li>
                                        </ul>
                                    </div>
                                    <!--/Filtro de Arquivos-->
                                    @if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.MEDIACENTER_EXPLORAR)))
                                    {
                                        <div class="col-md-6">
                                            <div class="btn-group" style="float: right;">
                                                <a id="btnNovoArquivo" class="btn blue-hoki" style="font-size: 13px !important;"><i class="fa fa-upload"></i> Gerenciador</a>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div class="row mix-grid" id="gridArquivos" ownerid="" arquivocategoriatipoid="">
                                </div>

                            </div>
                        </div>

                        <div class="tab-pane fade " id="tabDivulgacao">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Controle de Exibição do Conteúdo</label>
                                        <div class="radio-list">
                                            <label class="radio-inline">
                                                <input type="radio" name="Privado" id="Privado" value="0"> Público
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="Privado" id="Privado" value="1"> Privado
                                            </label>
                                        </div>
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div id="dvRestricao">
                                <h3 class="form-section">Restrição</h3>
                                <div class="alert alert-danger">
                                    Apenas usuários pertencentes aos <b>Grupos / Departamentos</b> selecionados poderão visualizar esta publicação.
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Grupos / Departamentos</label>
                                            
                                            <div id="tvUsuarioGrupo"></div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label Header_Restricao_UsuarioGrupo_Usuario">Usuários</label>

                                            <div id="tvUsuario" style="height: 250px; overflow: auto;"></div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                        </div>

                    </div>
                    <!--/Conteúdo -->

                    <div style="width: 100%; text-align: right; margin-top: 0px; border-top: 1px solid lightgray; padding-top: 5px; ">
                        <button type="button" id="btnSalvarBanner" class="btn green" title="Salvar dados do Banner"><i class="fa fa-check"></i> Salvar</button>
                        <button type="button" id="btnFecharBanner" onclick="javascript: history.go(-1);" class="btn default">Voltar</button>
                    </div>

                </div>

            </form>
            <!-- END FORM-->
        </div>
        @*</div>*@
    </div>
</div>


@{Html.RenderPartial("../Publicacao/CadArquivo", null);}
@{Html.RenderPartial("../Publicacao/SelArquivo", null);}
