@{
    ViewBag.Title = "ListaBanner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jBanner.js" type="text/javascript"></script>
}
@model BackofficeCMS.Models.CMS

@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.BANNER_EDITAR)))
{
    <input id="optFunc_120" type="hidden" />
}
@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.BANNER_EXCLUIR)))
{
    <input id="optFunc_130" type="hidden" />
}

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.BANNER_LISTAR)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
<table id="tblBanner" class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="width: 100px;">
                ID
            </th>
            <th>
                Tipo
            </th>
            <th>
                Título
            </th>
            <th style="width: 80px;">
                Data
            </th>
            <th style="width: 80px;">
                Visualizações
            </th>
            <th style="width: 80px;">
                Cliques
            </th>
            <th style="width: 80px;">
                Status
            </th>
            <th style="width: 80px;">
                Actions
            </th>
        </tr>
    </thead>
</table>
}
