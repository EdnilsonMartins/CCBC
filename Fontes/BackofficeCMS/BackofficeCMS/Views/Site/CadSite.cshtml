@{
    ViewBag.Title = "CadSite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{

    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jSite.js" type="text/javascript"></script>
}

@model BackofficeCMS.Models.CMS


<div class="row">

    <div class="modalInterna" style="display: none;">
        <img src="@Url.Content("~/Content/Images/loader.gif")" alt="Aguarde..." style="border: 1px solid gray; border-radius: 4px !important; left: 50%; margin-left: -16px; position: absolute; width: 32px; top: 50%; transform: translateY(-50%); " />
    </div>

    <div class="col-md-12">
        @*<div class="portlet box blue-hoki">*@
        @*<div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Publicação
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>*@

        <div class="">
            @*portlet-body form*@
            <!-- BEGIN FORM-->
            <form id="frmCadSite" action="#" class="horizontal-form">


                <input type="hidden" id="SiteId" name="SiteId" value="@ViewBag.SiteId" />
                <div class="form-body tabbable tabbable-custom tabbable-noborder">

                    <!-- Abas -->
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tabGeral" data-toggle="tab">
                                Geral
                            </a>
                        </li>
                    </ul>
                    <!--/Abas -->
                    <!-- Conteúdo -->
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="tabGeral">

                            <!-- row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Descrição</label>
                                        <input type="text" id="Descricao" name="Descricao" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->

                            <!-- row-->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Tags</label>
                                        <input id="tags_1" name="tags_1" type="text" class="form-control tags" />

                                    </div>
                                </div>
                            </div>
                            <!--/row-->

                            <!-- row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Host Base (Endereço base do site)</label>
                                        <input type="text" id="HostBase" name="HostBase" class="form-control">
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->


                            <h3 class="form-section">Contatos</h3>
                            <!-- row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Telefone Principal</label>
                                        <input id="TelefonePrincipal" name="TelefonePrincipal" type="text" class="form-control tags" />

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">E-mail Principal</label>
                                        <input id="EmailPrincipal" name="EmailPrincipal" type="text" class="form-control tags" />

                                    </div>
                                </div>
                            </div>
                            <!--/row-->


                            <h3 class="form-section">Localização</h3>
                            <!-- row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Endereço</label>
                                        <input id="Localizacao" name="Localizacao" type="text" class="form-control tags" />

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Complemento</label>
                                        <input id="LocalizacaoComplemento" name="LocalizacaoComplemento" type="text" class="form-control tags" />

                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <!-- row-->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Link (Mapa do Local)</label>
                                        <input id="LinkMapa" name="LinkMapa" type="text" class="form-control tags" />

                                    </div>
                                </div>
                            </div>
                            <!--/row-->


                            <h3 class="form-section">Autenticação da conta e-mail padrão</h3>
                            <!-- row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Host</label>
                                        <input id="Host" name="Host" type="text" class="form-control tags" />

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Display name</label>
                                        <input id="DisplayName" name="DisplayName" type="text" class="form-control tags" />

                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <!-- row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Username</label>
                                        <input id="Username" name="Username" type="text" class="form-control tags" />

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Password</label>
                                        <input id="Password" name="Password" type="text" class="form-control tags" />

                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <!-- row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Email Destino</label>
                                        <input id="EmailDestino" name="EmailDestino" type="text" class="form-control tags" />

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Porta</label>
                                        <input id="EmailPorta" name="EmailPorta" type="text" class="form-control tags" />

                                    </div>
                                </div>
                            </div>
                            <!--/row-->


                        </div>
                    </div>
                    <!--/Conteúdo -->

                    <div style="width: 100%; text-align: right; margin-top: 0px; border-top: 1px solid lightgray; padding-top: 5px; ">
                        <button type="button" id="btnSalvarSite" class="btn green" title="Salvar dados do Site"><i class="fa fa-check"></i> Salvar</button>
                        <button type="button" id="btnFecharSite" onclick="javascript: history.go(-1);" class="btn default">Voltar</button>
                    </div>

                </div>

            </form>
            <!-- END FORM-->
        </div>
        @*</div>*@
    </div>
</div>
