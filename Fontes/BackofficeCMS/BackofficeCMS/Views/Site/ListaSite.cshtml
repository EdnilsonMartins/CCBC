@{
    ViewBag.Title = "ListaSite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jSite.js" type="text/javascript"></script>
}

@model BackofficeCMS.Models.CMS

@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.SITE_EDITAR)))
{
    <input id="optFunc_52" type="hidden" />
}
@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.SITE_EXCLUIR)))
{
    <input id="optFunc_53" type="hidden" />
}

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.SITE_LISTAR)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
<table id="tblSite" class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="width: 100px;">
                ID
            </th>
            <th >
                Descrição
            </th>
            <th style="width: 80px;">
                Actions
            </th>
        </tr>
    </thead>
</table>
}