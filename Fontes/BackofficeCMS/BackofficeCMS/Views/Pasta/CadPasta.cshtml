
<div class="modal fade" id="CadPasta" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalTitle">Pasta</h4>
            </div>
            <div class="modal-body">

                <form id="frmCadPasta">

                    <input type="hidden" id="PastaId" name="PastaId" value="0" />
                    <input type="hidden" id="PastaPaiId" name="PastaPaiId" value="0" />
                    <div class="row" style="margin-bottom: 10px !important;">
                        <div class="form-group">
                            <label class="control-label col-md-3">Descrição</label>
                            <div class="col-md-9">
                                <input id="Descricao" name="Descricao" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                @*<button type="button" id="btnNovoEditoria" class="btn blue-hoki" style="float: left;"><i class="fa fa-plus"></i> Novo</button>*@

                <button type="button" id="btnSalvarPasta" class="btn green"><i class="fa fa-check"></i> Ok</button>
                <button type="button" id="btnFecharPasta" class="btn btn-default " data-dismiss="modal">Fechar</button>

            </div>
        </div>
    </div>
</div>