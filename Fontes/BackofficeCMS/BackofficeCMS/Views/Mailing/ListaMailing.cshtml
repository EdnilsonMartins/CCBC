@{
    ViewBag.Title = "ListaMailing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jMailing.js" type="text/javascript"></script>
}


@model BackofficeCMS.Models.CMS

@using (Ajax.BeginForm("ListaMailing", "Mailing", null, new AjaxOptions() { HttpMethod = "Post" }))
{
    
if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.EMARKETING_MAILING)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
    <table id="tblMailing" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th style="width: 80px;">
                    ID
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Email
                </th>
                <th>
                    Data Inclusão
                </th>
                <th>
                    Ativo
                </th>
                <th style="width: 50px; text-align: center;">
                    Actions
                </th>
            </tr>
        </thead>
    </table>
}


}