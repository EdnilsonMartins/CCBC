@{
    ViewBag.Title = "ListaUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    @*@System.Web.Optimization.Scripts.Render(System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/bundles/Usuario"))*@

    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jUsuario.js" type="text/javascript"></script>
}

@model BackofficeCMS.Models.CMS

@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.USUARIO_ADICIONAR_PRECADASTRO_WEBFULL)))
{
    <input id="optFunc_295" type="hidden" />
}
@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.USUARIO_EDITAR)))
{
    <input id="optFunc_300" type="hidden" />
}
@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.USUARIO_EXCLUIR)))
{
    <input id="optFunc_310" type="hidden" />
}

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.USUARIO_LISTAR)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
<table id="todos" class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="width: 100px;">
                ID
            </th>
            <th>
                Nome
            </th>
            <th>
                Login
            </th>
            <th>
                Ativo
            </th>
            <th>
                Notificação Pré-Cadastro
            </th>
            <th>
                Situação WebFull
            </th>
            <th>
                Cadastro
            </th>
            <th style="width: 80px;">
                Actions
            </th>
        </tr>
    </thead>
</table>
}