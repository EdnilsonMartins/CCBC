@{
    ViewBag.Title = "ListaEmailTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jEmailTemplate.js" type="text/javascript"></script>
}
@model BackofficeCMS.Models.CMS

@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.TEMPLATEEMAILADMIN_EDITAR)))
{
    <input id="optFunc_430" type="hidden" />
}

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.TEMPLATEEMAILADMIN_LISTAR)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
    <table id="tblEmailTemplate" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th style="width: 100px;">
                    ID
                </th>
                <th>
                    Comentário
                </th>
                <th style="width: 80px;">
                    Actions
                </th>
            </tr>
        </thead>
    </table>
}
