@{
    ViewBag.Title = "CadEmailTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script type="text/javascript" src="@Url.Content("~/")Scripts/Libs/jquery.ui.widget.js"></script>
    <script type="text/javascript" src="@Url.Content("~/")Scripts/Libs/jquery.fileupload.js"></script>

    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jArquivo.js" type="text/javascript"></script>

    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jEmailTemplate.js" type="text/javascript"></script>

    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jMediaCenter.js" type="text/javascript"></script>

}

@model BackofficeCMS.Models.CMS


<div class="row">

    <div class="modalInterna" style="display: none;">
        <img src="@Url.Content("~/Content/Images/loader.gif")" alt="Aguarde..." style="border: 1px solid gray; border-radius: 4px !important; left: 50%; margin-left: -16px; position: absolute; width: 32px; top: 50%; transform: translateY(-50%); " />
    </div>

    <div class="col-md-12">
        @*<div class="portlet box blue-hoki">*@
        @*<div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Publicação
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>*@

        <div class="">
            @*portlet-body form*@
            <!-- BEGIN FORM-->
            <form id="frmCadEmailTemplate" action="#" class="horizontal-form">


                <input type="hidden" id="EmailTemplateId" name="EmailTemplateId" value="@ViewBag.EmailTemplateId" />
                <div class="form-body tabbable tabbable-custom tabbable-noborder">

                    <!-- Abas -->
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tabGeral" data-toggle="tab">
                                Geral
                            </a>
                        </li>
                    </ul>
                    <!--/Abas -->
                    <!-- Conteúdo -->
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="tabGeral">

                            <div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Grupo</label>
                                        <select name="EmailGrupoTemplate" class="bs-select form-control">
                                            <option value="1">E-mail Administrativo</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Comentário</label>
                                        <input type="text" id="Comentario" name="Comentario" class="form-control">
                                        <span class="help-block">
                                            
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Assunto</label>
                                        <textarea id="Assunto" name="Assunto" rows="5" class="form-control" style="resize: none;"></textarea>
                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Corpo</label>
                                 
                                        <div class="alert alert-warning">
                                            Lista de tags especiais utilizadas para mesclar nas mensagens enviadas pelo sistema.<br />
                                            <b><%Nome%></b> - Nome do usuário<br />
                                            <b><%Link_MinhaConta%></b> - Linha para acessar a conta do usuário<br />
                                            <b><%Link_LembrarSenha%></b> - Linhk para realizar a troca de senha<br />
                                            <b><%Login_WebFull%></b> - Login de acesso ao sistema WebFull<br />
                                            <b><%Email_WebFull%></b> - E-mail usado como atutenticação no sistema WebFull
                                        </div>
                                               
                                        @*<textarea id="Corpo" name="Corpo" rows="5" class="form-control" style="resize: none;"></textarea>*@

                                        <input type="hidden" id="EmailTemplateCorpo" name="EmailTemplateCorpo" />
                                        <textarea class="form-control" id="Corpo" name="Corpo" rows="6"></textarea>

                                        <span class="help-block">

                                        </span>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->

                        </div>

                    </div>
                    <!--/Conteúdo -->

                    <div style="width: 100%; text-align: right; margin-top: 0px; border-top: 1px solid lightgray; padding-top: 5px; ">
                        <button type="button" id="btnSalvarEmailTemplate" class="btn green" title="Salvar dados do Template"><i class="fa fa-check"></i> Salvar</button>
                        <button type="button" id="btnFecharEmailTemplate" onclick="javascript: history.go(-1);" class="btn default">Voltar</button>
                    </div>

                </div>

            </form>
            <!-- END FORM-->
        </div>
        @*</div>*@
    </div>
</div>


