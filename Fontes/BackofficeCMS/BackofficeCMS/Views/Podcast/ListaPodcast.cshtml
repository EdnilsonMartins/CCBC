@{
    ViewBag.Title = "ListaPodcast";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/")Scripts/BackofficeCMS/jPodcast.js" type="text/javascript"></script>
}
@model BackofficeCMS.Models.CMS

@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.BANNER_EDITAR)))
{
    <input id="optFunc_120" type="hidden" />
}
@if (Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.BANNER_EXCLUIR)))
{
    <input id="optFunc_130" type="hidden" />
}

@if (!Model.ListaFuncionalidades.Any(x => (x.Ativo == true && x.FuncionalidadeId == (int)DAL.Util.FUNCIONALIDADES.BANNER_LISTAR)))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                <b>Conteúdo restrito, acesso negado!</b>
            </div>
        </div>
    </div>
}
else
{
                <input type="hidden" id="Tipo" name="Tipo" value="@ViewBag.Tipo" />
    
    <table id="tblPodcast" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th style="width: 100px;">
                    ID
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Título
                </th>
                <th style="width: 80px;">
                    Data
                </th>
                <th style="">
                    SubTitulo
                </th>
                @*<th style="width: 80px;">
                    TituloEpisodio
                </th>*@
                @*<th style="width: 80px;">
                    Descrição
                </th>*@
                <th style="width: 80px;">
                    Actions
                </th>
            </tr>
        </thead>
    </table>
}
